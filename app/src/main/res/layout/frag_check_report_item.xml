<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_gravity="center_vertical"
        android:layout_height="20dp"
        android:src="@drawable/frag_msg_synergy" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lab_check_report_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/tab_text_normal"
            android:textSize="17sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lab_check_name"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_normal"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lab_check_time"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_normal"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lab_check_address"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/tab_text_normal"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lab_check_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/tab_text_normal"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_check_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check"
                android:textColor="@color/tab_text_normal"
                android:textSize="17sp" />


            <Button
                android:id="@+id/btn_check_view"
                android:layout_width="wrap_content"
                android:text="@string/view"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_normal"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>