<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollview"
    android:background="@color/app_background"
    >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/title_icon" />

                <TextView
                    android:id="@+id/liuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:paddingLeft="7dp"
                    android:text="路段渣土车月度流量排名"
                    android:textColor="#666666"
                    android:textSize="14sp"></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_liuliangpaiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:text="2017年10月"
                    android:textColor="#222222"
                    android:textSize="12sp"></TextView>

                <ImageView
                    android:id="@+id/image_date_choice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/droparrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/blueround" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="5dp"
                    android:text="白名单"
                    android:textSize="14sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/weiwanchengdianwei" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:text="黑名单"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_textview"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/app_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/title_icon" />

            <TextView
                android:id="@+id/liuliangduibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:paddingLeft="8dp"
                android:text="路段渣土车月度流量对比"
                android:textColor="#666666"
                android:textSize="14sp"></TextView>

        </LinearLayout>

        <include
            android:id="@+id/liuliangduibi_detail"
            layout="@layout/liuliangduibi_month_or_day"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/app_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/title_icon" />

            <TextView
                android:id="@+id/baojinglv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:paddingLeft="8dp"
                android:text="路段报警率月度对比"
                android:textColor="#666666"
                android:textSize="14sp"></TextView>
        </LinearLayout>

        <include
            android:id="@+id/warning_detail"
            layout="@layout/warning_month_or_day"/>

    </LinearLayout>
</ScrollView>
