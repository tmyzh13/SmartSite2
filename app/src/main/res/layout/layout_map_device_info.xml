<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_select_camera">

    <TextView
        android:background="@android:color/transparent"
        android:id="@+id/device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="设备名称：130004  污染严重"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:background="@android:color/transparent"
        android:id="@+id/device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="地址：东湖高新区光谷一路"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"/>
    <TextView
        android:background="@android:color/transparent"
        android:id="@+id/device_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="安装日期：2017-09-29"
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        android:layout_marginTop="10dp"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/selector_map_devices_info"
            android:id="@+id/device_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="详细数据"
            android:textColor="#000000"/>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#000000"
            ></View>
        <Button
            android:id="@+id/device_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/selector_map_devices_info"
            android:text="取消"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>