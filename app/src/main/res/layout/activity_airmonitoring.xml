<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/app_background">

    <include layout="@layout/layout_toolbar_one_icon"
        android:id="@+id/one_icon"/>
    <include layout="@layout/layout_toolbar_search"
        android:visibility="gone"
        android:id="@+id/serch"/>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="区域月度综合排名" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_paiming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="12dp"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/main_text_color"
                        android:id="@+id/date"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/date"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AQI"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/name"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_9999"/>
                <com.isoftstone.smartsite.model.tripartite.view.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:id="@+id/lv"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="优良天数占比" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_youliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="12dp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/youliang_datedate"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/youliang_datedate"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AQI"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/youliang_name"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_9999"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_above="@+id/seekBar1"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="AQI变化趋势同期对比" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_tongqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="12dp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/tongqi_date"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/tongqi_date"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AQI"
                        android:textSize="12dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tongqi_name"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_9999"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="14dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#599fff"
                    android:id="@+id/text_pushtime_0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_pushtime"
                    android:textSize="12dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/main_text_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="14dp"
                    android:textColor="#ff9e5d"
                    android:layout_marginRight="8dp"
                    android:id="@+id/text_before_0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_before"
                    android:textSize="12dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/main_text_color"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_above="@+id/seekBar1"
                android:background="@android:color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_icon"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:text="AQI变化趋势区域对比" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_quyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2017年10月"
                        android:textSize="12dp"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/quyu_date"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_toRightOf="@id/quyu_date"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="请选择区域"
                        android:textSize="12dp"
                        android:layout_toLeftOf="@+id/imageView_wuyu"
                        android:id="@+id/quyu_name"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/droparrow"
                        android:layout_alignParentRight="true"
                        android:id="@+id/imageView_wuyu"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_9999"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="14dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#599fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_quyu_1"
                    android:textSize="12dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/main_text_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textSize="14dp"
                    android:textColor="#ff9e5d"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_quyu_2"
                    android:textSize="12dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/main_text_color"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart4"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_above="@+id/seekBar1"
                android:background="@android:color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>